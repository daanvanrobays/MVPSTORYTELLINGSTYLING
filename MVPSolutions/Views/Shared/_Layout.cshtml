                </ul>
            </li>
            <li>
                <a>MARIE VAN PUYENBROECK</a>
                <ul>
                    <li>
                        <a href="@Url.Action("Index","About")">About</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Follow")">Follow & Contact</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Ysow")">Your story, our world</a>
                    </li>
                </ul>
            </li>
        </ul>
    </nav>

    @RenderBody()

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-lg-offset-1 text-center">
                    <p class="text-muted">Copyright &copy; Marie Van Puyenbroeck</p>
                    <p class="text-muted">Site by: <a href="mailto:vanrobays.daan@hotmail.com"><strong>Daan Van Robays</strong></a></p>
                </div>
            </div>
        </div>
    </footer>
    <!-- WebFonts -->
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js"></script>
    <script>
        WebFont.load({
            custom: {
                families: ['andale-mono', 'helvetica-neue-light', 'simsun-extb', ]
            }
        });
    </script>
    <!-- jQuery -->
    <script src="/js/jquery.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="/js/bootstrap.min.js"></script>
    <!-- Masonry JavaScript -->
    <script src="~/js/imagesloaded.pkgd.min.js"></script>
    <script src="~/js/masonry.pkgd.min.js"></script>
    <!-- Lightbox JavaScript -->
    <script src="/js/lightbox.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="/js/pace.js"></script>
    <script src="/js/mvp.js"></script>
    <script src="/js/googleanalytics.js"></script>
    <script>
        //// Activates the Carousel
        //$('.carousel').carousel({
        //    interval: 5000
        //})
        //Lightbox options
        lightbox.option({
            'alwaysShowNavOnTouchDevices': true,
