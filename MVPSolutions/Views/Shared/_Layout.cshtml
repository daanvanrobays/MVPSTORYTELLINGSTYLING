    <nav id="sidebar-wrapper">
        <ul class="sidebar-nav text-main">
            <a id="menu-close" href="#" class="btn btn-light btn-lg pull-left toggle"><i class="fa fa-times"></i></a>
            <li class="sidebar-brand">
                <a href="@Url.Action("Index","Home")" onclick=$("#menu-close").click();>Home</a>
            </li>
            <li>
                <a>Stories</a>
                <ul>
                    <li>
                        <a href="@Url.Action("Moodswings","Stories")">Moodswings</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Twentytwothree","Stories")">22.3 en Rose</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Masked","Stories")">Masked</a>
                    </li>
                    <li>
                        <a href="@Url.Action("HolyWhite","Stories")">Holy White</a>
                    </li>
                    <li>
